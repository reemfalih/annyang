{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["import"],
  "rules": {
    "no-console": "off",
    "max-len": ["error", { "code": 120, "ignoreComments": true }],
    "func-names": ["warn", "as-needed"]
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "rules": {
        "max-len": "off"
      }
    }
  ]
}
