{
  "name": "annyang",
  "version": "3.0.0-dev",
  "description": "A javascript library for adding voice commands to your site, using speech recognition",
  "main": "dist/annyang.cjs",
  "exports": {
    ".": {
      "import": "./dist/annyang.mjs",
      "require": "./dist/annyang.cjs",
      "default": "./dist/annyang.js"
    }
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "rollup -c",
    "serve": "rollup -c -w",
    "dev": "npm-run-all --parallel lint:watch format:watch serve",
    "docs": "documentation build src/annyang.js -f md -o docs/README.md",
    "format": "prettier --write 'src/**/*.js' 'package.json' '.eslintrc.json' 'rollup.config.mjs'",
    "format:watch": "chokidar 'src/**/*.js' -c 'npm run format'",
    "lint": "npm-run-all -c lint:src lint:docs",
    "lint:docs": "documentation lint src/annyang.js",
    "lint:src": "eslint 'src/**/*.js'",
    "lint:watch": "chokidar 'src/**/*.js' -c 'npm run lint'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TalAter/annyang.git"
  },
  "keywords": [
    "annyang",
    "annyang.js",
    "recognition",
    "speech",
    "speechrecognition",
    "voice",
    "webkitspeechrecognition"
  ],
  "author": "Tal Ater <tal@talater.com> (https://www.talater.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TalAter/annyang/issues"
  },
  "homepage": "https://www.talater.com/annyang/",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "chokidar-cli": "^3.0.0",
    "documentation": "^14.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rollup": "^4.18.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.1"
  }
}
